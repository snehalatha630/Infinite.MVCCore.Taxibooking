@model CustomerViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Customer</h1>

<div class="row">
    <div class="col-md-7">
        <div asp-validation-summary="All" class="text-danger"></div>

        <ul class="list-group">
            <li class="list-group-item"><b>CustomerName</b>@Model.CustomerName</li>
            <li class="list-group-item"><b>PhoneNo</b>@Model.PhoneNo</li>
            <li class="list-group-item"><b>EmailId</b>@Model.EmailId</li>
            <li class="list-group-item"><b>Address</b>@Model.Address</li>

        </ul>
        <div>
            Are you sure do you want to delete this movie?
        </div>
        <div>
            <form asp-controller="Customer" asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Customer" asp-action="Index" Back to List></a>
            </form>
        </div>
        
    </div>
</div>

